---
import "../styles/global.css";

interface Props {
  title?: string;
  showHeader?: boolean;
}

const { title = "DailyPath", showHeader = true } = Astro.props;

// Get user from middleware (context.locals.user)
const user = Astro.locals.user;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    {showHeader && (
      <header class="header">
        <div class="header-content">
          <div class="logo">
            <a href="/">DailyPath</a>
          </div>
          
          <nav class="nav" role="navigation" aria-label="Główna nawigacja">
            {user ? (
              <div class="user-menu">
                <div class="user-info">
                  <span class="user-name">{user.full_name}</span>
                  <span class="user-email">{user.email}</span>
                </div>
                <button 
                  id="logout-button" 
                  class="logout-button"
                  aria-label="Wyloguj się z aplikacji"
                >
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                    <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
                    <polyline points="16 17 21 12 16 7"></polyline>
                    <line x1="21" y1="12" x2="9" y2="12"></line>
                  </svg>
                  <span>Wyloguj</span>
                </button>
              </div>
            ) : (
              <div class="auth-links">
                <a href="/login" class="login-link">Zaloguj się</a>
                <a href="/register" class="register-link">Zarejestruj się</a>
              </div>
            )}
          </nav>
        </div>
      </header>
    )}
    
    <slot />

    {user && (
      <script>
        // Logout functionality for authenticated users
        const logoutButton = document.getElementById('logout-button');
        
        if (logoutButton) {
          logoutButton.addEventListener('click', async () => {
            try {
              // Disable button during logout
              logoutButton.setAttribute('disabled', 'true');
              logoutButton.style.opacity = '0.6';
              logoutButton.style.cursor = 'not-allowed';
              
              // Call logout API endpoint
              const response = await fetch('/api/auth/logout', {
                method: 'POST',
                headers: {
                  'Content-Type': 'application/json',
                },
              });

              if (response.ok) {
                console.log('✅ Wylogowano pomyślnie');
                // Redirect to login page with success message
                window.location.href = '/login?message=Wylogowano pomyślnie';
              } else {
                console.error('❌ Błąd podczas wylogowywania');
                alert('Wystąpił błąd podczas wylogowywania. Spróbuj ponownie.');
                // Re-enable button on error
                logoutButton.removeAttribute('disabled');
                logoutButton.style.opacity = '1';
                logoutButton.style.cursor = 'pointer';
              }
            } catch (error) {
              console.error('❌ Błąd sieci:', error);
              alert('Wystąpił błąd połączenia. Sprawdź połączenie internetowe.');
              // Re-enable button on error
              logoutButton.removeAttribute('disabled');
              logoutButton.style.opacity = '1';
              logoutButton.style.cursor = 'pointer';
            }
          });
        }
      </script>
    )}
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }

  .header {
    background-color: #ffffff;
    border-bottom: 1px solid #e5e7eb;
    box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
  }

  .header-content {
    max-width: 1280px;
    margin: 0 auto;
    padding: 1rem 1.5rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo a {
    font-size: 1.5rem;
    font-weight: 700;
    color: #1f2937;
    text-decoration: none;
    transition: color 0.2s;
  }

  .logo a:hover {
    color: #3b82f6;
  }

  .nav {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .user-menu {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .user-info {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 0.25rem;
  }

  .user-name {
    font-size: 0.875rem;
    font-weight: 600;
    color: #1f2937;
  }

  .user-email {
    font-size: 0.75rem;
    color: #6b7280;
  }

  .logout-button {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    font-size: 0.875rem;
    font-weight: 500;
    color: #374151;
    background-color: #f9fafb;
    border: 1px solid #d1d5db;
    border-radius: 0.375rem;
    cursor: pointer;
    transition: all 0.2s;
  }

  .logout-button:hover {
    background-color: #f3f4f6;
    border-color: #9ca3af;
    color: #1f2937;
  }

  .logout-button:focus-visible {
    outline: 2px solid #3b82f6;
    outline-offset: 2px;
  }

  .logout-button:disabled {
    cursor: not-allowed;
    opacity: 0.6;
  }

  .auth-links {
    display: flex;
    gap: 1rem;
    align-items: center;
  }

  .login-link,
  .register-link {
    padding: 0.5rem 1rem;
    font-size: 0.875rem;
    font-weight: 500;
    text-decoration: none;
    border-radius: 0.375rem;
    transition: all 0.2s;
  }

  .login-link {
    color: #374151;
    background-color: #ffffff;
    border: 1px solid #d1d5db;
  }

  .login-link:hover {
    background-color: #f9fafb;
    border-color: #9ca3af;
  }

  .register-link {
    color: #ffffff;
    background-color: #3b82f6;
    border: 1px solid #3b82f6;
  }

  .register-link:hover {
    background-color: #2563eb;
    border-color: #2563eb;
  }

  .login-link:focus-visible,
  .register-link:focus-visible {
    outline: 2px solid #3b82f6;
    outline-offset: 2px;
  }

  /* Responsive design */
  @media (max-width: 640px) {
    .header-content {
      flex-direction: column;
      gap: 1rem;
      padding: 1rem;
    }

    .user-menu {
      flex-direction: column;
      gap: 0.75rem;
      width: 100%;
    }

    .user-info {
      align-items: center;
      width: 100%;
    }

    .logout-button {
      width: 100%;
      justify-content: center;
    }

    .auth-links {
      flex-direction: column;
      width: 100%;
    }

    .login-link,
    .register-link {
      width: 100%;
      text-align: center;
    }
  }
</style>
