---
import AppLayout from "../layouts/AppLayout.astro";
import { ReportViewWrapper } from "../components/reports/ReportViewWrapper";
import { requireAuth } from "../lib/utils/auth";

// Ensure user is authenticated
const user = requireAuth(Astro);
---

<AppLayout title="Raporty - DailyPath" user={user}>
  <div class="space-y-6">
    <div>
      <h1 class="text-3xl font-bold tracking-tight">Raporty</h1>
      <p class="text-muted-foreground">Analizuj czas pracy i postępy zadań</p>
    </div>

    <ReportViewWrapper client:load initialUser={user} />
  </div>
</AppLayout>

