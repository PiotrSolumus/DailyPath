---
import AppLayout from "../layouts/AppLayout.astro";
import { TeamViewWrapper } from "../components/team/TeamViewWrapper";

// Get user from middleware (can be null if not logged in)
const user = Astro.locals.user;
---

<AppLayout title="Zespół - DailyPath" user={user}>
  <div class="space-y-6">
    <div>
      <h1 class="text-3xl font-bold tracking-tight">Zespół</h1>
      <p class="text-muted-foreground">Podgląd i zarządzanie zespołem</p>
    </div>

    {user ? (
      <TeamViewWrapper
        client:load
        departmentId={user.active_department?.id ?? ""}
        onViewMemberPlan={(memberId: string, memberName: string) => {
          // Analytics callback - modal is handled internally by React
          console.log("View plan for:", memberId, memberName);
        }}
        initialUser={user}
      />
    ) : (
      <div class="rounded-lg border bg-card p-6 text-center">
        <p class="text-muted-foreground">⚠️ Tryb testowy: wybierz użytkownika, aby zobaczyć zespół</p>
        <a href="/login" class="mt-4 inline-block rounded-md bg-primary px-4 py-2 text-sm font-medium text-primary-foreground hover:bg-primary/90">
          Wybierz użytkownika
        </a>
      </div>
    )}
  </div>
</AppLayout>

