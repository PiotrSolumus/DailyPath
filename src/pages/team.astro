---
import AppLayout from "../layouts/AppLayout.astro";
import { TeamViewWrapper } from "../components/team/TeamViewWrapper";
import { requireAuth } from "../lib/utils/auth";

// Ensure user is authenticated
const user = requireAuth(Astro);
---

<AppLayout title="Zespół - DailyPath" user={user}>
  <div class="space-y-6">
    <div>
      <h1 class="text-3xl font-bold tracking-tight">Zespół</h1>
      <p class="text-muted-foreground">Podgląd i zarządzanie zespołem</p>
    </div>

    <TeamViewWrapper
      client:load
      departmentId={user.active_department?.id ?? ""}
      onViewMemberPlan={(memberId: string, memberName: string) => {
        // Analytics callback - modal is handled internally by React
        console.log("View plan for:", memberId, memberName);
      }}
      initialUser={user}
    />
  </div>
</AppLayout>

