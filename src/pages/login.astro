---
// TEMPORARY: Simple user selection page (no real authentication)
const supabaseAdmin = Astro.locals.supabaseAdmin;

// Fetch all users
const { data: users, error } = await supabaseAdmin
  .from("users")
  .select("id, email, full_name, app_role")
  .order("app_role", { ascending: false })
  .order("email", { ascending: true });

if (error) {
  console.error("Error fetching users:", error);
}
